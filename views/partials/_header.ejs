<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div
      class="collapse navbar-collapse"
      id="navbarNavAltMarkup"
      style="justify-content: space-between"
    >
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user) {%>
    <form class="form-inline" action="/logout" method="POST">
      <div class="form-group mb-2">
        <label for="currentUser" style="padding: 20px"
          >Logged in as <%= user.email %>
        </label>
        <button type="submit" class="btn btn-primary">Log out</button>
      </div>
    </form>
    <% } else{ %>
    <form class="form-inline" id="new_user" action="/login" method="POST">
      <div class="form-group mb-2">
        <label for="longURL" class="label label-default"></label>
        <input
          id="new_user"
          class="form-control"
          type="text"
          name="username"
          placeholder="username"
          style="width: 300px; margin: 1em"
        />
        <button type="submit" class="btn btn-primary">Log in</button>
      </div>
    </form>
    <% } %>
  </nav>
</header>
